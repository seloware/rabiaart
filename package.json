{
  "name": "rabiadogruozart",
  "version": "1.0.0",
  "description": "Rabia Doğruöz Art Portfolio Website",
  "scripts": {
    "optimize-images": "sharp-cli --input 'resimler/*.{jpg,jpeg,png}' --output 'resimler/optimized' --resize 900 && sharp-cli --input 'resimler/*.{jpg,jpeg,png}' --output 'resimler/medium' --resize 600 && sharp-cli --input 'resimler/*.{jpg,jpeg,png}' --output 'resimler/small' --resize 300",
    "minify-css": "cleancss -o style.min.css style.css",
    "minify-js": "uglifyjs script.js -o script.min.js",
    "build": "npm run optimize-images && npm run minify-css && npm run minify-js"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "sharp-cli": "^4.1.1",
    "uglify-js": "^3.17.4"
  }
} 